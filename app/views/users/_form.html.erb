<%= form_tag '/users', :html => { :class => 'form-horizontal' } do %>
  <div class="control-group">
    <%= label_tag :oauth_token, 'Oatuh Token', :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :oauth_token, '', :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag "Get user details", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
